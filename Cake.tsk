  const colors = ['bg-blue-400', 'bg-green-400', 'bg-red-400', 'bg-purple-400', 'bg-yellow-400'];
  const color = colors[index % colors.length];

  return (
    <div className="flex flex-col items-center relative mx-[2px] mb-[-5px]">
      {/* Flame */}
      <div className="h-6 w-6 relative flex justify-center items-end">
        {isLit && (
          <motion.div
            initial={{ scale: 0 }}
            animate={{ 
              scale: [1, 1.1, 0.9, 1],
              rotate: [-2, 2, -2],
              opacity: 1
            }}
            transition={{
              duration: 0.5 + Math.random() * 0.5,
              repeat: Infinity,
              ease: "easeInOut"
            }}
            className="w-4 h-6 bg-gradient-to-t from-orange-500 via-yellow-400 to-yellow-200 rounded-full shadow-[0_0_10px_2px_rgba(255,200,0,0.6)] origin-bottom"
          />
        )}
        {!isLit && (
           <motion.div 
             initial={{ opacity: 0, y: 5 }}
             animate={{ opacity: 1, y: -10 }}
             transition={{ duration: 1 }}
             className="absolute text-gray-400 text-xs"
           >
             ðŸ’¨
           </motion.div>
        )}
      </div>
